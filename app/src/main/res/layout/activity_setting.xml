<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">
<include layout="@layout/titlebar"/>
    <LinearLayout
        android:orientation="vertical"
        android:background="@color/colorEditTextLine"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="203dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/item_bg_bill"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/layout_user_info"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:paddingRight="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:text="个人资料"
                    android:textColor="#ff585974"
                    android:textSize="14sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@mipmap/icon_getinto" />
            </RelativeLayout>

            <View

                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorEditTextLine" />

            <RelativeLayout
                android:id="@+id/layout_password_updata"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:paddingLeft="20dp"
                android:paddingRight="20dp">


                <TextView
                    android:id="@+id/txt_updata_password"
                    android:layout_alignParentLeft="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="密码修改"
                    android:textColor="#ff585974"
                    android:textSize="14sp" />
                <TextView
                    android:id="@+id/tv_updata_password"
                    android:gravity="right"
                    android:layout_toRightOf="@+id/txt_updata_password"
                    android:layout_toLeftOf="@+id/iv_password_set"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text=""
                    android:textColor="#ff585974"
                    android:textSize="14sp" />
                <ImageView
                    android:id="@+id/iv_password_set"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@mipmap/icon_getinto" />
            </RelativeLayout>
            <View

                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorEditTextLine" />

            <RelativeLayout
                android:visibility="gone"
                android:id="@+id/layout_bind_wx"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:paddingLeft="20dp"
                android:paddingRight="20dp">


                <TextView
                    android:id="@+id/txt_wx_bind"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="微信绑定"
                    android:textColor="#ff585974"
                    android:textSize="14sp" />
                <TextView
                    android:id="@+id/tv_wx_nickname"
                    android:gravity="right"
                    android:layout_toRightOf="@+id/txt_wx_bind"
                    android:layout_toLeftOf="@+id/iv_wx_bind"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="未绑定"
                    android:textColor="#ff585974"
                    android:textSize="14sp" />
                <ImageView
                    android:id="@+id/iv_wx_bind"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@mipmap/icon_getinto" />
            </RelativeLayout>
            <View
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorEditTextLine" />

            <RelativeLayout
                android:id="@+id/layout_email_bind"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:paddingLeft="20dp"
                android:paddingRight="20dp">


                <TextView
                    android:id="@+id/txt_email_bind"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="邮箱绑定"
                    android:textColor="#ff585974"
                    android:textSize="14sp" />
                <TextView
                    android:id="@+id/tv_email_num"
                    android:gravity="right"
                    android:layout_toRightOf="@+id/txt_email_bind"
                    android:layout_toLeftOf="@+id/iv_email_bind"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text=""
                    android:textColor="#ff585974"
                    android:textSize="14sp" />
                <ImageView
                    android:id="@+id/iv_email_bind"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@mipmap/icon_getinto" />
            </RelativeLayout>
            <View
android:visibility="visible"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorEditTextLine" />

            <RelativeLayout
                android:id="@+id/layout_phone_bind"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:paddingLeft="20dp"
                android:paddingRight="20dp">


                <TextView
                    android:id="@+id/txt_phone_bind"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="手机绑定"
                    android:textColor="#ff585974"
                    android:textSize="14sp" />
                <TextView
                    android:id="@+id/tv_phone_num"
                    android:gravity="right"
                    android:layout_toRightOf="@+id/txt_phone_bind"
                    android:layout_toLeftOf="@+id/iv_phone_bind"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text=""
                    android:textColor="#ff585974"
                    android:textSize="14sp" />
                <ImageView
                    android:id="@+id/iv_phone_bind"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@mipmap/icon_getinto" />
            </RelativeLayout>
        </LinearLayout>

        <Button
            android:id="@+id/btn_exit_login"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_centerInParent="true"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="40dp"
            android:layout_marginRight="40dp"
            android:background="@drawable/item_bg_bill"
            android:gravity="center"
            android:text="退出登录"
            android:textColor="@color/colorOrange"
            android:textSize="16sp" />
    </LinearLayout>
</LinearLayout>
