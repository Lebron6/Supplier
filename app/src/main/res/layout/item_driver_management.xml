<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content">
<RelativeLayout
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="90dp">
    <ImageView
        android:layout_centerVertical="true"
        android:id="@+id/image_user"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="20dp"
        android:layout_width="50dp"
        android:layout_height="50dp" />
    <RelativeLayout
        android:layout_marginRight="10dp"
        android:gravity="center_vertical"
        android:layout_toLeftOf="@+id/iv_call"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/image_user"
        android:paddingTop="7dp"
        android:paddingBottom="7dp"
        android:orientation="vertical"
        android:layout_marginLeft="15dp"
        android:layout_width="wrap_content"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/tv_staff_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="IT部-张三"
            android:textColor="#ff2b2c44"
            android:textSize="16sp"
            />
        <LinearLayout
            android:layout_marginTop="5dp"
            android:layout_below="@+id/tv_staff_name"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:background="@mipmap/icon_tel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tv_updata_time"
                android:layout_marginLeft="3dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ff9c9db3"
                android:textSize="12sp"
                />
        </LinearLayout>

    </RelativeLayout>
<ImageView
    android:id="@+id/iv_call"
    android:layout_marginRight="15dp"
    android:layout_toLeftOf="@+id/tv_sett"
    android:background="@mipmap/icon_call"
    android:layout_centerVertical="true"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/tv_sett"
        android:text="启用"
        android:layout_marginRight="20dp"
        android:gravity="center"
        android:textSize="13sp"
        android:background="@drawable/tv_bg_half_blue"
        android:layout_centerVertical="true"
        android:textColor="@color/colorWhite"
        android:layout_alignParentRight="true"
        android:layout_width="64dp"
        android:layout_height="30dp" />
</RelativeLayout>
    <View
        android:background="@color/colorEditTextLine"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>
</LinearLayout>
