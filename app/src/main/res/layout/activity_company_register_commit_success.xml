<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">
    <include layout="@layout/titlebar" />
    <RelativeLayout
        android:id="@+id/layout_c"
        android:gravity="bottom"
        android:background="@mipmap/bg_checklistv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:gravity="center"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/iv_commit_suc"
            android:background="@mipmap/icon_commit_success"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_marginTop="30dp"
            android:layout_below="@+id/iv_commit_suc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="提交成功"
            android:textStyle="bold"
            android:textColor="@color/colorMainBlack"
            android:textSize="30sp"
            />
            <TextView
                android:id="@+id/tv_company_num"
                android:layout_marginTop="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="企业编号：18938240"
                android:textColor="#ff585974"
                android:textSize="18sp"
                />
            <TextView
                android:layout_marginTop="20dp"
                android:paddingLeft="50dp"
                android:paddingRight="50dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="感谢您的注册，请妥善保管企业编号，将用于登录app。可随时在“我的”中查询。"
                android:textColor="#ff585974"
                android:textSize="14sp"
                />

        </LinearLayout>
    </RelativeLayout>
    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_below="@+id/layout_c"
        android:id="@+id/layout_button"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@color/colorWhite"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_to_app"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_centerInParent="true"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:background="@drawable/btn_bg_theme"
            android:gravity="center"
            android:text="进入APP"
            android:textColor="@color/colorWhite"
            android:textSize="16sp" />

    </LinearLayout>

</RelativeLayout>
