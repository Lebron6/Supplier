<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="#F6F6F8"
    android:layout_height="match_parent">
    <LinearLayout
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:orientation="vertical"
        android:background="@mipmap/tab_my_bg"
        android:layout_width="match_parent"
        android:layout_height="345dp" >
        <LinearLayout
            android:orientation="horizontal"
            android:layout_marginTop="74dp"
            android:layout_width="match_parent"
            android:layout_height="60dp">
            <ImageView
                android:id="@+id/iv_user_icon"
                android:layout_width="60dp"
                android:layout_height="60dp" />
            <LinearLayout
                android:layout_marginLeft="15dp"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/tv_company"
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:text=""
                    android:textColor="#ff2b2c44"
                    android:textSize="14sp"
                    />
                <TextView
                    android:id="@+id/tv_user_name"
                    android:layout_marginTop="6dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="#ff2b2c44"
                    android:textSize="14sp"
                    />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/layout_top"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="164dp"
        android:orientation="vertical"
        android:background="@drawable/item_bg_bill"
        android:layout_width="match_parent"
        android:layout_height="204dp">
        <RelativeLayout
            android:id="@+id/layout_3pl_manager"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:gravity="center_vertical"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp">
            <ImageView
                android:id="@+id/iv_3pl"
                android:layout_centerVertical="true"
                android:background="@mipmap/icon_staff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/iv_3pl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3PL管理"
                android:textColor="#ff585974"
                android:textSize="14sp"
                />
            <ImageView
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@mipmap/icon_getinto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
        <View

            android:background="@color/colorEditTextLine"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>
        <RelativeLayout
            android:id="@+id/layout_staff_manager"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:gravity="center_vertical"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp">
            <ImageView
                android:id="@+id/iv_staff"
                android:layout_centerVertical="true"
                android:background="@mipmap/icon_staff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/iv_staff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="员工管理"
                android:textColor="#ff585974"
                android:textSize="14sp"
                />
            <ImageView
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@mipmap/icon_getinto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
        <View

            android:background="@color/colorEditTextLine"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>
        <RelativeLayout
            android:id="@+id/layout_company_info"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:gravity="center_vertical"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp">
            <ImageView
                android:id="@+id/iv_enterprise"
                android:layout_centerVertical="true"
                android:background="@mipmap/icon_enterprise"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/iv_enterprise"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="企业信息"
                android:textColor="#ff585974"
                android:textSize="14sp"
                />
            <ImageView
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@mipmap/icon_getinto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
        <View

            android:background="@color/colorEditTextLine"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>
        <RelativeLayout
            android:id="@+id/layout_setting"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:gravity="center_vertical"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp">
            <ImageView
                android:id="@+id/iv_set"
                android:layout_centerVertical="true"
                android:background="@mipmap/icon_set"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/iv_set"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="设置"
                android:textColor="#ff585974"
                android:textSize="14sp"
                />
            <ImageView
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@mipmap/icon_getinto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
        <View

            android:background="@color/colorEditTextLine"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>

    </LinearLayout>
    <LinearLayout
        android:layout_below="@+id/layout_top"
        android:id="@+id/layout_about_e9"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="20dp"
        android:orientation="vertical"
        android:background="@drawable/item_bg_bill"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <RelativeLayout
            android:id="@+id/layout_call_service"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:gravity="center_vertical"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp">
            <ImageView
                android:id="@+id/iv_contact"
                android:layout_centerVertical="true"
                android:background="@mipmap/icon_contact"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/iv_contact"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="联系客服"
                android:textColor="#ff585974"
                android:textSize="14sp"
                />
            <ImageView
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@mipmap/icon_getinto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
        <View

            android:background="@color/colorEditTextLine"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>
        <RelativeLayout
            android:visibility="gone"
            android:id="@+id/layout_about_us"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:gravity="center_vertical"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp">
            <ImageView
                android:id="@+id/iv_e9"
                android:layout_centerVertical="true"
                android:background="@mipmap/icon_e9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/iv_e9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="关于 IDA 云物流"
                android:textColor="#ff585974"
                android:textSize="14sp"
                />
            <ImageView
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@mipmap/icon_getinto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
    </LinearLayout>
    <RelativeLayout
        android:visibility="gone"
        android:id="@+id/layout_invite_driver"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:layout_below="@+id/layout_about_e9"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dp"
        android:orientation="vertical"
        android:background="@drawable/item_bg_bill"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <ImageView
            android:id="@+id/iv_invete"
            android:layout_centerVertical="true"
            android:background="@mipmap/icon_e9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/iv_invete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="邀请司机"
            android:textColor="#ff585974"
            android:textSize="14sp"
            />

        <ImageView
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@mipmap/icon_getinto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <View
        android:id="@+id/view_line"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="0.1dp"/>
</RelativeLayout>
