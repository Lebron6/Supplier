<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content">
    <LinearLayout
        android:id="@+id/layout_t"
        android:layout_width="match_parent"
        android:layout_height="103dp"
        android:background="@drawable/item_bg_bill"
        android:orientation="vertical"
        android:paddingTop="10dp"
        android:visibility="visible">

        <TextView
            android:id="@+id/tv_reject_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="运单审核未通过！ "
            android:textColor="#F35959"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tv_reject_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="2019-06-24 15:12:12"
            android:textColor="#585974"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tc_reject_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:text="原因原因原因原因原因原因原因原因原因原因原因原因原因原因原因原因原因原因原因原因原因原因原因原因原因原因原因原因原因原因原因原因原因原因原因原..."
            android:textColor="#585974"
            android:textSize="12sp" />
    </LinearLayout>
    <View
        android:layout_marginTop="2dp"
        android:background="@color/colorEditTextLine"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>
</LinearLayout>
