<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">
    <include layout="@layout/titlebar" />
    <LinearLayout
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:layout_marginTop="15dp"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="30dp">
        <TextView
            android:id="@+id/tv_car_num"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:text="苏E1231"
            android:textColor="#ff2b2c44"
            android:textSize="18sp"
            />
        <TextView
            android:id="@+id/tv_driver_name"
            android:layout_marginLeft="15dp"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:text="司机：张三"
            android:textColor="#ff585974"
            android:textSize="14sp"
            />
    </LinearLayout>
    <LinearLayout

        android:layout_marginTop="10dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:gravity="center_horizontal"
        android:layout_height="120dp">
        <LinearLayout
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@drawable/item_bg_purple"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:text="载重量计算"
                android:textColor="#ffffffff"
                android:textSize="14sp"
                />
            <LinearLayout
                android:layout_marginTop="3dp"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:text="最大(kg)："
                    android:textColor="#ffdbdce6"
                    android:textSize="14sp"
                    />
                <TextView
                    android:id="@+id/tv_zdzl"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:text="888"
                    android:textColor="#ffffffff"
                    android:textSize="14sp"
                    />
            </LinearLayout>
            <LinearLayout   android:layout_marginTop="3dp"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:text="已用(kg)："
                    android:textColor="#ffdbdce6"
                    android:textSize="14sp"
                    />
                <TextView
                    android:id="@+id/tv_yyzl"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:text="666"
                    android:textColor="#ff4ad879"
                    android:textSize="14sp"
                    />
            </LinearLayout>
            <LinearLayout   android:layout_marginTop="3dp"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:text="剩余(kg)："
                    android:textColor="#ffdbdce6"
                    android:textSize="14sp"
                    />
                <TextView
                    android:id="@+id/tv_syzl"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:text="666"
                    android:textColor="#ff4ad879"
                    android:textSize="14sp"
                    />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout  android:layout_marginLeft="20dp"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@drawable/item_bg_purple"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:text="装载体积计算"
                android:textColor="#ffffffff"
                android:textSize="14sp"
                />
            <LinearLayout
                android:layout_marginTop="3dp"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:text="最大(m³)："
                    android:textColor="#ffdbdce6"
                    android:textSize="14sp"
                    />
                <TextView
                    android:id="@+id/tv_zdtj"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:text="888"
                    android:textColor="#ffffffff"
                    android:textSize="14sp"
                    />
            </LinearLayout>
            <LinearLayout   android:layout_marginTop="3dp"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:text="已用(m³)："
                    android:textColor="#ffdbdce6"
                    android:textSize="14sp"
                    />
                <TextView
                    android:id="@+id/tv_yytj"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:text="666"
                    android:textColor="#ff4ad879"
                    android:textSize="14sp"
                    />
                <TextView
                    android:id="@+id/tv_cz"
                    android:layout_marginLeft="5dp"
                    android:layout_width="36dp"
                    android:layout_height="20dp"
                    android:text="超载"
                    android:gravity="center"
                    android:background="@drawable/tv_bg_orange"
                    android:textColor="@color/colorWhite"
                    android:textSize="12sp"
                    />
            </LinearLayout>
            <LinearLayout   android:layout_marginTop="3dp"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:text="剩余(m³)："
                    android:textColor="#ffdbdce6"
                    android:textSize="14sp"
                    />
                <TextView
                    android:id="@+id/tv_sytj"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:text="666"
                    android:textColor="#ff4ad879"
                    android:textSize="14sp"
                    />
            </LinearLayout>
        </LinearLayout>
</LinearLayout>
    <RelativeLayout
        android:background="@color/colorEditTextLine"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_list"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/item_bg_bill"
            android:layout_above="@+id/btn_commit"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </android.support.v7.widget.RecyclerView>
        <Button
            android:id="@+id/btn_commit"
            android:layout_marginBottom="20dp"
            android:layout_alignParentBottom="true"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:background="@drawable/btn_bg_theme"
            android:gravity="center"
            android:text="确认分配"
            android:textColor="@color/colorWhite"
            android:textSize="16sp" />
    </RelativeLayout>
</LinearLayout>
