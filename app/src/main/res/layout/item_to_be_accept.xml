<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout

            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:paddingTop="5dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:orientation="vertical"
            android:background="@drawable/item_bg_bill"
            android:layout_width="match_parent"
            android:layout_height="118dp">
            <TextView
                android:id="@+id/tv_time_count"
                android:textStyle="bold"
                android:gravity="center"
                android:textSize="20sp"
                android:textColor="@color/colorOrange"
                android:text="10:12"
                android:background="@drawable/tv_bg_pink"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_width="80dp"
                android:layout_height="30dp" />
            <TextView
                android:layout_marginTop="5dp"
                android:id="@+id/tv_company_name"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:text="南京联合物流有限公司"
                android:textColor="#ff2b2c44"
                android:textSize="18sp"
                />
            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_below="@+id/tv_company_name"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="17dp"
                    android:text="调度时间："
                    android:textColor="#ff9c9db3"
                    android:textSize="12sp"
                    />
                <TextView
                    android:id="@+id/tv_time"
                    android:layout_width="wrap_content"
                    android:layout_height="17dp"
                    android:text="2019/06/27 12:45"
                    android:textColor="#ff2b2c44"
                    android:textSize="12sp"
                    />
            </LinearLayout>
            <RelativeLayout
                android:gravity="center_vertical"
                android:background="@drawable/layout_bg_gray"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:layout_alignParentBottom="true"
                android:layout_width="match_parent"
                android:layout_height="36dp">
                <TextView
                    android:id="@+id/txt_price"
                    android:layout_marginLeft="10dp"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="参考价格"
                    android:textColor="#ff9c9db3"
                    android:textSize="14sp"
                    />
                <TextView
                    android:id="@+id/tv_price"
                    android:layout_toRightOf="@+id/txt_price"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="￥12"
                    android:textColor="#ff2b2c44"
                    android:textSize="20sp"
                    />
                <TextView
                    android:id="@+id/tv_accept"
                    android:gravity="center"
                    android:textSize="16sp"
                    android:textColor="@color/colorWhite"
                    android:text="接  单"
                    android:background="@drawable/bg_half_blue"
                    android:layout_alignParentRight="true"
                    android:layout_width="70dp"
                    android:layout_height="match_parent" />
            </RelativeLayout>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>
