<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content">
<LinearLayout
    android:paddingLeft="15dp"
    android:paddingRight="15dp"
    android:gravity="center_vertical"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="114dp">
    <RelativeLayout
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_car_num"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:text="苏E 13H13"
            android:textColor="#ff2b2c44"
            android:textSize="18sp"
            />
        <TextView
            android:id="@+id/tv_hd"
            android:layout_toRightOf="@+id/tv_car_num"
            android:background="@drawable/tv_bg_upload"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_width="wrap_content"
            android:layout_height="22dp"
            android:text=""
            android:textColor="#ff3d68eb"
            android:textSize="12sp"
            />
        <TextView
            android:id="@+id/tv_sett"
            android:text="启用"
            android:gravity="center"
            android:textSize="13sp"
            android:background="@drawable/tv_bg_half_blue"
            android:layout_centerVertical="true"
            android:textColor="@color/colorWhite"
            android:layout_alignParentRight="true"
            android:layout_width="64dp"
            android:layout_height="30dp" />
    </RelativeLayout>

<LinearLayout
    android:layout_marginTop="8dp"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="最大装载量："
        android:textColor="#ff9c9db3"
        android:textSize="14sp"
        />
    <TextView
        android:id="@+id/tv_large"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:text="212kg"
        android:textColor="#ff2b2c44"
        android:textSize="14sp"
        />
</LinearLayout>
    <LinearLayout
        android:gravity="center_vertical"
        android:layout_marginTop="8dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="车型：："
            android:textColor="#ff9c9db3"
            android:textSize="14sp"
            />
        <TextView
            android:id="@+id/tv_car_type"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:text="212kg"
            android:textColor="#ff2b2c44"
            android:textSize="14sp"
            />
        <TextView
            android:layout_marginLeft="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="司机："
            android:textColor="#ff9c9db3"
            android:textSize="14sp"
            />
        <TextView
            android:id="@+id/tv_driver"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:text="212kg"
            android:textColor="#ff2b2c44"
            android:textSize="14sp"
            />
    </LinearLayout>
</LinearLayout>
    <View
        android:background="@color/colorEditTextLine"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>
</LinearLayout>
