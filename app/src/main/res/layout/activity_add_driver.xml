<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <include layout="@layout/titlebar" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="1dp"
        android:background="@color/colorEditTextLine"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/layout_top"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/item_bg_bill"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/layout_select"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:paddingRight="10dp">

                <EditText
                    android:id="@+id/et_phone_num"
                    android:layout_marginRight="20dp"
                    android:layout_toLeftOf="@+id/tv_query"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:gravity="center_vertical"
                    android:hint="请输入手机号码搜索"
                    android:textColor="#ffbdbed9"
                    android:textColorHint="#ffbdbed9"
                    android:textCursorDrawable="@drawable/edit_cursor_theme"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_query"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:layout_alignParentRight="true"
                    android:background="@null"
                    android:gravity="center_vertical|right"
                    android:hint="搜索"
                    android:textColor="@color/colorMainBlack"
                    android:textColorHint="@color/colorMainBlack"
                    android:textSize="14sp" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/colorEditTextLine" />

            <LinearLayout
                android:id="@+id/layout_has_driver"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:text="驾驶证类型："
                        android:textColor="#ff9c9db3"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/tv_driver_type"
                        android:layout_width="18dp"
                        android:layout_height="20dp"
                        android:text="A1"
                        android:textColor="#ff2b2c44"
                        android:textSize="14sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:text="驾驶证号："
                        android:textColor="#ff9c9db3"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/tv_driver_num"
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:text="6512651"
                        android:textColor="#ff2b2c44"
                        android:textSize="14sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:text="身份证号："
                        android:textColor="#ff9c9db3"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/tv_id_num"
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:text="+564149868515"
                        android:textColor="#ff2b2c44"
                        android:textSize="14sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:text="紧急联系人："
                        android:textColor="#ff9c9db3"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/tv_call_per"
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:text="张三  1321654984"
                        android:textColor="#ff2b2c44"
                        android:textSize="14sp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/layout_center"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@id/layout_top"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/item_bg_bill"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="22dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:text="状态"
                android:textColor="#ff2b2c44"
                android:textSize="16sp" />

            <RelativeLayout
                android:layout_width="96dp"
                android:layout_height="32dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="15dp">

                <LinearLayout


                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/layout_bg_gray">

                    <RadioGroup
                        android:id="@+id/rg_type"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <RadioButton
                            android:id="@+id/rb_z"
                            android:layout_width="44dp"
                            android:layout_height="match_parent"
                            android:background="@drawable/tab_bill_type"
                            android:button="@null"
                            android:checked="true"
                            android:gravity="center"
                            android:text="启用"
                            android:textColor="@drawable/text_color_bill_type"
                            android:textSize="14sp" />

                        <RadioButton
                            android:id="@+id/rb_j"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/tab_bill_type"
                            android:button="@null"
                            android:gravity="center"
                            android:text="禁用"
                            android:textColor="@drawable/text_color_bill_type"
                            android:textSize="14sp" />
                    </RadioGroup>
                </LinearLayout>
            </RelativeLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:layout_below="@+id/layout_center"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/item_bg_bill"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">

            <LinearLayout
                android:id="@+id/layout_remarks"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="备注"
                    android:textColor="#ff2b2c44"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="0/80"
                    android:textColor="#ffbdbed9"
                    android:textSize="12sp" />
            </LinearLayout>

            <EditText
                android:id="@+id/et_remarks"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:layout_below="@+id/layout_remarks"
                android:background="@null"
                android:gravity="left|top"
                android:hint="请输入"
                android:textColor="#ffbdbed9"
                android:textColorHint="#ffbdbed9"
                android:textCursorDrawable="@drawable/edit_cursor_theme"
                android:textSize="14sp" />
        </RelativeLayout>

        <LinearLayout
            android:gravity="center"

            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_alignParentBottom="true"
            android:background="@color/colorWhite">

            <TextView
                android:id="@+id/tv_keep_and_go"
                android:gravity="center"
                android:textColor="@color/colorMain"
                android:text="保存并继续添加司机"
                android:layout_width="208dp"
                android:layout_height="44dp"
                android:background="@drawable/layout_bg_gray" />
            <Button
                android:id="@+id/btn_keep"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="92dp"
                android:layout_height="44dp"
                android:layout_centerInParent="true"
                android:layout_marginLeft="40dp"
                android:background="@drawable/btn_bg_theme"
                android:gravity="center"
                android:text="保存"
                android:textColor="@color/colorWhite"
                android:textSize="16sp" />
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>
